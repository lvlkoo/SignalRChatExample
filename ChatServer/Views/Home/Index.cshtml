@{
    ViewBag.Title = "Home";
}

<div class="content container-fluid bootstrap snippets">
    <div class="row row-broken">
        <div class="col-sm-3 col-xs-12">
            <div class="col-inside-lg decor-default chat" style="overflow: hidden; outline: none;" tabindex="5000">
                <div id="users" class="chat-users">
                    <h6>Online</h6>

                </div>
            </div>
        </div>
        <div class="col-sm-9 col-xs-12 chat" style="overflow: hidden; outline: none;" tabindex="5001">
            <div class="col-inside-lg decor-default">
                <div id="messages" class="chat-body">
                    <h6>Chat</h6>

                </div>
                <div class="chat-body">
                    <div class="answer-add">
                        <input id="message" placeholder="Write a message">
                        <span id="sendmessage" class="answer-btn answer-btn-2"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="nicknamePromt" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">               
                <h4 class="modal-title">Chose your nickname</h4>
            </div>
            <div class="modal-body">
                <label>Nickname</label>
                <input type="text" id="displayname"/>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="startChatConnection()" class="btn btn-default" data-dismiss="modal">Ok</button>
            </div>
        </div>

    </div>
</div>

@section scripts
{
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--Reference the chat initialization and callbacks definitions. -->
    <script src="~/Scripts/chat.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.6.8-fix/jquery.nicescroll.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".chat").niceScroll();
        })
    </script>
}
